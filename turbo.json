{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/**/*"]
    },
    "db:push": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "web#build": {
      "dependsOn": ["^db:generate", "^web#build"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["!src/components/ui/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    }
  }
}
