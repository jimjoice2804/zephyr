{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/**/*"]
    },
    "db:push": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^db:generate", "^build"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["!src/components/ui/**"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": true,
      "persistent": true
    }
  }
}
