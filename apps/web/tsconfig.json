{
  "extends": "@zephyr/config/react.tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "strict": false,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@zephyr-ui/*": ["./src/components/*"],
      "@zephyr-assets/*": ["./src/app/assets/*"]
    }
  },
  "lib": ["DOM", "ESNext", "DOM.Iterable"],
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
