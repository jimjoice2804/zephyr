{
  "extends": "@zephyr/config/base.tsconfig.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
