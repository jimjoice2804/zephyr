{
  "extends": "@zephyr/config/react.tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@C/*": ["src/components/ui/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    "build",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
