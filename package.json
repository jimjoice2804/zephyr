{
  "name": "zephyr",
  "version": "0.1",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "env:check": "node docker/scripts/check-env.js",
    "build": "turbo build",
    "codegen": "turbo codegen",
    "dep:check": "pnpm dlx sherif@latest",
    "dep:fix": "pnpm dlx sherif@latest --fix",
    "predev": "node docker/scripts/pre-dev.js",
    "dev": "turbo dev",
    "start": "node docker/scripts/start-dev.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "typecheck": "pnpm --recursive --parallel run typecheck",
    "docker:status": "docker system df && docker ps && docker volume ls && docker network ls",
    "docker:clean:all": "docker stop $(docker ps -aq) && docker rm $(docker ps -aq) && docker rmi $(docker images -q) -f && docker volume rm $(docker volume ls -q) && docker network prune -f && docker builder prune -af",
    "docker:interactive": "node ./docker/scripts/clean-docker.js",
    "docker:dev": "docker compose -f docker-compose.dev.yml --profile init up --build",
    "docker:dev:detach": "docker compose -f docker-compose.dev.yml --profile init up --build -d",
    "docker:start": "docker compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:clean:dev": "docker compose -f docker-compose.dev.yml down -v && docker volume rm zephyr_postgres_data_dev zephyr_redis_data_dev zephyr_minio_data_dev && rm -f .dev-init",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.13.1",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.1",
    "dotenv": "^16.4.7",
    "husky": "^9.1.7",
    "react-markdown": "9.0.3",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.2.0+sha512.0d27364e0139c6aadeed65ada153135e0ca96c8da42123bd50047f961339dc7a758fc2e944b428f52be570d1bd3372455c1c65fa2e7aa0bfbf931190f9552001"
}
